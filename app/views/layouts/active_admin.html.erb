<!DOCTYPE html>
<html>
<head>
  <title>Active Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Link to ActiveAdmin CSS -->
  <%= stylesheet_link_tag 'active_admin', media: 'all' %>
  <!-- Include the necessary ActiveAdmin JS files -->
  <%= javascript_include_tag 'active_admin', 'data-turbolinks-track': 'reload' %>

  <!-- Include other required stylesheets or scripts if necessary -->
  <%= stylesheet_link_tag 'application', media: 'all' %> <!-- For general app styles -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> <!-- For general app JS %>

  <!-- Add Bootstrap CSS if not already included -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Add this navigation bar ABOVE the wrapper div -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <%= link_to "Your App Name", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Books", books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Categories", categories_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Contact", contact_path, class: "nav-link" %>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Account", edit_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div id="wrapper">
    <!-- Add container for main content with some padding -->
    <div class="container mt-4">
      <%= yield %>
    </div>
  </div>

  <!-- Add Bootstrap JS at the end of body -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>