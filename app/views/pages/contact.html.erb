<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <h1 class="display-4">Contact Us</h1>

      <div class="card mt-4">
        <div class="card-body">
          <h3>Get in Touch</h3>

          <div class="row mt-4">
            <div class="col-md-6">
              <h5>Customer Support</h5>
              <p>
                <i class="bi bi-envelope"></i> support@maplereads.ca<br>
                <i class="bi bi-telephone"></i> (123) 456-7890
              </p>

              <h5 class="mt-4">Business Hours</h5>
              <p>
                Monday-Friday: 9am-5pm EST<br>
                Saturday: 10am-4pm EST<br>
                Sunday: Closed
              </p>
            </div>

            <div class="col-md-6">
              <h5>Mailing Address</h5>
              <address>
                Maple Reads Inc.<br>
                123 Book Street<br>
                Toronto, ON M5V 2H1<br>
                Canada
              </address>

              <div class="mt-4">
                <h5>Follow Us</h5>
                <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-instagram"></i></a>
              </div>
            </div>
          </div>

          <hr class="my-4">

          <h4>Send Us a Message</h4>
          <div class="container py-5">
  <h1><%= @page.title %></h1>
  <div class="page-content">
    <%= raw @page.content %>
  </div>

  <!-- Keep your existing contact form -->
  <%= form_with(url: contact_submit_path, local: true, class: "mt-3") do |form| %>
    <!-- Your form fields -->
  <% end %>
</div>
<%= form_with(url: contact_submit_path, local: true, class: "mt-3") do |form| %>
  <div class="mb-3">
    <%= form.label :name, "Your Name", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :email, "Email Address", class: "form-label" %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :message, "Your Message", class: "form-label" %>
    <%= form.text_area :message, class: "form-control", rows: 4, required: true %>
  </div>

  <%= form.submit "Send Message", class: "btn btn-primary" %>
<% end %>
        </div>
      </div>
    </div>
  </div>
</div>